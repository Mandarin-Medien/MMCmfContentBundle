{% extends "@MMCmfContent/Modal/default_modal.html.twig" %}

{% block modal_header %}
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">{% block modal_title %}{{ 'Neuen Inhaltstyp hinzuf√ºgen'|trans }}{% endblock %}</h4>
{% endblock %}

{% block modal_body_container %}
    {{ form_start(form, {'attr' : {'onSubmit' : 'submitForm(this);return false;'} }) }}
    <div class="modal-body">
        {{ form_widget(form) }}
    </div>
{% endblock %}

{% block modal_footer_container %}
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Close'|trans }}</button>
        {{ form_row(form.submit) }}
    </div>
    {{ form_end(form) }}
{% endblock %}