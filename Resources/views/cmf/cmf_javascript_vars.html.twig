<!-- MMCmfContentBundle Variables -->
<script>
{% block mm_cmf_javascript_vars %}
    {% if app.user is defined and app.user is not null %}
        document.mm_cmf_content = {};
        document.mm_cmf_content.save_route = '{{ path('mm_cmf_content_save') }}';
        {% if node is defined %}
            document.mm_cmf_content.root_node = {{ node.id }};
        {% endif %}

        {%  if mm_cmf_content_parser.notGridableClasses is defined and mm_cmf_content_parser.notGridableClasses|length > 0 %}
            document.mm_cmf_content.not_gridable_classes = {{  mm_cmf_content_parser.notGridableClasses|json_encode|raw }}
        {% endif %}
    {% endif %}
{% endblock %}

</script>
